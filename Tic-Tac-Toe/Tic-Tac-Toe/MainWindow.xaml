<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe"
        mc:Ignorable="d"    
        ResizeMode="NoResize"
        Title="Tic Tac Toe" Height="500" Width="324"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <Image Source="G:\Programming\C# Projects\Tic-Tac-Toe-WPF\Tic-Tac-Toe\Tic-Tac-Toe\resource\background.jpg" />
        <StackPanel>
            <Button 
                Content="👤 1 Player"
                Click="SinglePlayer_Click"
                Foreground="Snow"
                Margin="0 180 0 0" 
                FontSize="22"
                Background="#FEAD1E"
                BorderBrush="Black"
                Height="50" 
                Width="200"/>
            <Button 
                x:Name="SecondPlayer"
                Click="SecondPlayer_Click"
                Content="👥 2 Players"     
                Foreground="Snow"
                Margin="0 30 0 0"
                FontSize="22"
                BorderBrush="Black"
                Background="RoyalBlue"
                Height="50" 
                Width="200"/>
        </StackPanel>
        <Frame x:Name="Main"/>
    </Grid>
</Window>
